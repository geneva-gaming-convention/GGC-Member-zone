<div class="row">
  <div class="col-md-12" style="padding-left:0px; padding-right:0px;">
    <div class="banner
    <% if resource.banner %>
    <%= resource.banner.downcase %>
    <% end %>
    ">
      <h4><%= resource.title %></h4>
      <p>
        <h5>Starting date: <%= resource.start_at.strftime("%d %B %Y at %Hh%M") %></h5>
      </p>
      <p>
        <%= resource.description %>
      </p>
    </div>
    <div class="card-pf-body">
      <p>
        <% if is_logged_in && is_ready_for_registration %>
        <iframe src="<%= resource.remote_url%>" width="100%" height="600" frameborder="0" scrolling="no" allowfullscreen="true"></iframe>
        <% else %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Authent required <span class="glyphicon glyphicon-lock" aria-hidden="true"></span></h3>
          </div>
          <div class="panel-body">
            To see this event you need to be <%= link_to 'connected', login_path %> and your account need to be ready for registration first ğŸ˜‰.
          </div>
        </div>
        <% end %>
      </p>
    </div>
  </div>
</div>
