<% @event_resources.each do |resource| %>
<% game = resource.game %>
<div class="col-md-4">
  <div class="card-pf card-pf-accented card-pf-aggregate-status">
    <h2 class="card-pf-title">
      <a href="<%= event_event_resource_path(@event.id, resource.id)%>"><%= game.name.capitalize %></a>
    </h2>
    <div class="card-pf-body">
      <%= image_tag resource.banner, size: "64x64", :class => "img-circle" %>
      <p class="card-pf-aggregate-status-notifications">
        <span class="card-pf-aggregate-status-notification">
          <a href="<%= event_event_resource_path(@event.id, resource.id)%>">
            <% if resource.game.teambased %>
            <span class="pficon pficon-users"></span>
            <% else %>
            <span class="pficon pficon-user"></span>
            <% end %>
            <%= resource.get_teams.count %>
          </a>
        </span>
      </p>
    </div>
  </div>
</div>
<% end %>
