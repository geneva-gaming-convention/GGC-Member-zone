                <td>
                  <table cellspacing="0" width="100%" class="row" style="font:25px/28px Arial, Helvetica, sans-serif; color:#292c34; padding:0 0 24px;">
                    <% if @registration.user %>
                    <tr>
                      <td>
                        Name:
                      </td>
                      <td>
                        <%= @registration.user.name.capitalize %> <%= @registration.user.lastname.capitalize %>
                      </td>
                      <td class="expander"></td>
                    </tr>
                    <% end %>
                    <tr>
                      <td>
                        Pass:
                      </td>
                      <td>
                        <%= @registration.event_pack.name %>
                      </td>
                      <td class="expander"></td>
                    </tr>
                    <% if @registration.event_resource %>
                    <tr>
                      <td>
                        Tournament:
                      </td>
                      <td>
                        <%= @registration.event_resource.title %>
                      </td>
                      <td class="expander"></td>
                    </tr>
                    <% end %>
                    <% if @registration.users_group %>
                    <tr>
                      <td>
                        Friend's group:
                      </td>
                      <td>
                        <%= @registration.users_group.name.capitalize %>
                      </td>
                      <td class="expander"></td>
                    </tr>
                    <% end %>
                    <% if @registration.team %>
                    <tr>
                      <td>
                        Team:
                      </td>
                      <td>
                        <%= @registration.team.name.capitalize %>
                      </td>
                      <td class="expander"></td>
                    </tr>
                    <% end %>
                    <% if @registration.event_pack %>
                    <tr>
                      <td>
                        Price:
                      </td>
                      <td>
                        <%= @registration.event_pack.price.to_i %> CHF
