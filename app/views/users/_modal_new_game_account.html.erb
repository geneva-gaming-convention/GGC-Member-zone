<div class="modal fade" id="new_game_account_modal" role="dialog" aria-labelledby="new_game_account_modal_label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
          <span class="pficon pficon-close"></span>
        </button>
        <h4 class="modal-title" id="new_game_account_modal_label">
          New game account
        </h4>
      </div>
      <div class="modal-body">
        <%= render 'steam_accounts/form_new' %>
        <%= render 'battlenet_accounts/form_new' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
