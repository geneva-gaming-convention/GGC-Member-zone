<%= form_for [@group, @team],:html => {:class => 'form-horizontal'} do |f| %>
<div class="form-group">
  <%= label_tag 'game', "Team's game", class: 'col-sm-2 col-md-2 control-label' %>
  <div class="col-sm-10 col-md-10">
    <%= f.select(:game_id, options_for_select(@games), {}, { :class => 'form-control' }) %>
  </div>
</div>
<div class="form-group">
  <%= label_tag 'name', "Team's name", class: 'col-sm-2 col-md-2 control-label' %>
  <div class="col-sm-10 col-md-10">
    <%= f.text_field :name, class: 'form-control', :autocomplete => :off%>
  </div>
</div>
<div class="form-group">
  <%= label_tag 'tag', "Team's tag (4 chars)", class: 'col-sm-2 col-md-2 control-label'  %>
  <div class="col-sm-10 col-md-10">
    <%= f.text_field :tag, class: 'form-control', :autocomplete => :off%>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-12">
    <button type="submit" class="btn btn-primary btn-lg">Create the team</button>
  </div>
</div>
<% end %>
