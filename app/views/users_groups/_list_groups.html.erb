<div class="row">
  <% if @groups.count > 0 %>
  <% @groups.each do |group| %>
  <div class="col-md-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= group.name.capitalize %> [<%= group.tag.upcase %>]
        </h3>
      </div>
      <div class="panel-body">
        <div class="row" style="margin-bottom:1em;">
          <div class="col-md-12">
            <% if is_logged_in %>
            Actions: <%= link_to "Join", "", class:"btn btn-primary btn-xs" %>
            <% end %>
          </div>
        </div>
        <ul class="list-group">
          <% group.users.each do |user| %>
          <li class="list-group-item">
            <%= user.name.capitalize %> <%= user.lastname.capitalize %>
            <% if user.group_members.where(users_group_id: group.id).first.is_creator %>
            <span class="glyphicon pficon-help" aria-hidden="true"></span>
            <% end %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <% end %>
  <% else %>
  <%= render 'application/empty_state', title: "Friend's groups", info: "Create or join a friend group, check above ⬆️..." %>
  <% end %>
</div>
