<% flash.each do |key, value| %>
<div id="error_explanation" class="alert alert-<%=key%>" role="alert">
  <p>
    <%= value %>
  </p>
</div>
<% end %>
<% if @group.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
  <h5><%= pluralize(@group.errors.count, "error") %> canceled your modification:</h5>
  <ul>
    <% @group.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="row">
  <div class="col-md-12">
    <div class="card-pf card-pf-accented card-pf-aggregate-status">
      <div class="card-pf-title">
        <h1>
          <span class="glyphicon pficon-project" aria-hidden="true"></span>
          <%= @group.name %><br/>
          <small>tag: [<%= @group.tag.upcase %>]</small>
        </h1>
      </div>
      <div class="card-pf-body">
        <div class="row">
          <!-- Group's members -->
          <div class="col-md-4">
            <%= render 'show_group_members', :group => @group %>
          </div>
          <!-- ---------------- -->
          <!-- Group's teams -->
          <div class="col-md-4">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">Teams</h3>
              </div>
              <div class="panel-body">
                <table class="table table-striped table-bordered">
                  <thead>
                    <tr>
                      <th>Team Name</th>
                      <th>Infos</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <th>Team de qualit√©</th>
                      <th>details</th>
                    </tr>
                  </tbody>
                </table>
                <button class="btn btn-primary disabled" type="button">Create team</button>
              </div>
            </div>
          </div>
          <!-- ---------------- -->
          <!-- Group settings -->
          <div class="col-md-4">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">Group settings</h3>
              </div>
              <div class="panel-body">
                <%= render 'group_settings', :group => @group %>
              </div>
            </div>
          </div>
          <!-- ---------------- -->
        </div>
      </div>
    </div>
  </div>
</div>
