<%= form_for @group ,url: users_group_join_path(@group), method: :post, :html => {:class => 'form-horizontal'} do |f| %>
<div class="form-group">
  <%= label_tag 'password', "Password", class: 'col-sm-2 col-md-2 control-label'  %>
  <div class="col-sm-10 col-md-10">
    <%= f.password_field :password, class: 'form-control'%>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-12">
    <button type="submit" class="btn btn-primary btn-lg">Join the group</button>
  </div>
</div>
<% end %>
