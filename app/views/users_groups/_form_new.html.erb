<%= form_for([current_logged_user, @group],:html => {:class => 'form-horizontal'}) do |f| %>
<div class="form-group">
  <%= label_tag 'name', "Group's name", class: 'col-sm-2 col-md-2 control-label' %>
  <div class="col-sm-10 col-md-10">
    <%= f.text_field :name, class: 'form-control'%>
  </div>
</div>
<div class="form-group">
  <%= label_tag 'tag', "Group tag", class: 'col-sm-2 col-md-2 control-label'  %>
  <div class="col-sm-10 col-md-10">
    <%= f.text_field :tag, class: 'form-control'%>
  </div>
</div>
<div class="form-group">
  <%= label_tag 'password', "Password", class: 'col-sm-2 col-md-2 control-label'  %>
  <div class="col-sm-10 col-md-10">
    <%= f.password_field :password, class: 'form-control'%>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <button type="submit" class="btn btn-primary btn-lg">Create the group</button>
  </div>
</div>
<% end %>
