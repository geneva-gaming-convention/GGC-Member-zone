<%= form_for(@address, remote: true, :html => {:class => 'form-horizontal', :id => 'new_address_form'}) do |f| %>
<div class="form-group">
  <label class="col-sm-3 control-label" for="street-modal-markup">
    Where do you live ?
  </label>
  <div class="col-sm-9">
    <%= select_tag "address[street]", nil, class: 'form-control', id: "street-modal-markup", style: "width:100%;" %>
  </div>
</div>
<div class="form-group">
  <label class="col-sm-3 col-xs-12 control-label" for="locality-modal-markup">Locality</label>
  <div class="col-sm-2 col-xs-4">
    <%= text_field_tag :postal_code, nil, class: 'form-control', id: "postal_code-modal-markup", readonly: true, required: true %>
  </div>
  <div class="col-sm-7 col-xs-8">
    <%= text_field_tag :locality, nil, class: 'form-control', id: "locality-modal-markup", readonly: true, required: true %>
  </div>
</div>
<div class="form-group">
  <label class="col-sm-3 control-label" for="state-modal-markup">State</label>
  <div class="col-sm-9">
    <%= text_field_tag :state, nil, class: 'form-control', id: "state-modal-markup", readonly: true, required: true %>
  </div>
</div>
<div class="form-group">
  <label class="col-sm-3 control-label" for="country-modal-markup">Country</label>
  <div class="col-sm-9">
    <%= text_field_tag :country, nil, class: 'form-control', id: "country-modal-markup", readonly: true, required: true %>
  </div>
</div>
<% end %>
