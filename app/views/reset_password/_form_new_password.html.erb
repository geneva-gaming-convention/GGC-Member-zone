<%= form_for(@user,url: rst_passwd_path, :html => {:class => 'form-horizontal'}) do |f| %>
<div class="form-group">
  <%= label_tag 'password', "Password", class: 'col-sm-2 col-md-2 control-label'  %>
  <div class="col-sm-10 col-md-10">
    <%= f.password_field :password, class: 'form-control'%>
  </div>
</div>
<div class="form-group">
  <%= label_tag 'password', "Password confirmation", class: 'col-sm-2 col-md-2 control-label'  %>
  <div class="col-sm-10 col-md-10">
    <%= f.password_field :password_confirmation, class: 'form-control'%>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= link_to "Cancel", root_path, :class => "btn btn-default btn-lg" %>
    <button type="submit" class="btn btn-lg btn-primary">Save</button>
  </div>
</div>
<% end %>
