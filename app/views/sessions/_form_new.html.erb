<%= form_for(:session, url: login_path,:html => {:class => 'form-horizontal'}) do |f| %>
<div class="form-group">
    <%= label_tag 'mail', "Email", class: 'col-sm-2 col-md-2 control-label' %>
    <div class="col-sm-10 col-md-10">
        <%= f.email_field :mail, class: 'form-control', :tabindex => 1 %>
    </div>
</div>
<div class="form-group">
    <%= label_tag 'password', "Password", class: 'col-sm-2 col-md-2 control-label'  %>
    <div class="col-sm-10 col-md-10">
        <%= f.password_field :password, class: 'form-control', :tabindex => 2 %>
    </div>
</div>
<div class="form-group">
    <div class="col-xs-8 col-sm-offset-2 col-sm-6 col-md-offset-2 col-md-6">
        <span class="help-block"> Forgot <a href="#" tabindex="6">password</a>?</span>
    </div>
    <div class="col-xs-4 col-sm-4 col-md-4 submit">
        <button type="submit" class="btn btn-primary btn-lg" tabindex="4">Log In</button>
    </div>
</div>
<% end %>
