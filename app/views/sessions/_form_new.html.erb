<%= form_for(:session, url: login_path,:html => {:class => 'form-horizontal'}) do |f| %>
<div class="form-group">
  <%= label_tag 'mail', "Email", class: 'col-sm-2 col-md-2 control-label' %>
  <div class="col-sm-10 col-md-10">
    <%= f.email_field :mail, class: 'form-control' %>
  </div>
</div>
<div class="form-group">
  <%= label_tag 'password', "Password", class: 'col-sm-2 col-md-2 control-label'  %>
  <div class="col-sm-10 col-md-10">
    <%= f.password_field :password, class: 'form-control' %>
  </div>
</div>
<div class="form-group">
  <div class="col-md-offset-2 col-md-4">
    <%= link_to "Forgot password ?", ask_rst_passwd_path, :class => "help-block" %>
  </div>
  <div class="col-sm-6 col-md-6 submit">
    <%= link_to "Register", new_user_path, :class => "btn btn-default btn-lg" %>
    <button type="submit" class="btn btn-primary btn-lg">Log In</button>
  </div>
</div>
<% end %>
