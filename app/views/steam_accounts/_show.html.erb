<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-6">
        <h3><%= game_account.name.capitalize %></h3>
      </div>
      <div class="col-md-6">
        <%= image_tag(game_account.image, class: "img-circle", size: "54x54") %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <h5>Steam ID: </br>
          <small><%= link_to game_account.account_id, game_account.profile_url, target: :blank %></small>
        </h5>
      </div>
      <div class="col-md-6">
        <h5>Action:</h5>
        <p>
          <%= link_to user_steam_account_path(current_logged_user.id, game_account.id), method: :delete, class: "btn btn-danger btn-xs" do %>
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>
